<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_menu"
    >
    <TextView  
		android:id="@+id/tvsettings"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/settings"
	    android:paddingTop="10dp"
	    android:paddingBottom="10dp"
	    android:gravity="center_horizontal"
	    android:textStyle="bold"
	    android:textColor="#000000"
    />
    <TextView  
	    android:id="@+id/tvnotation"
		android:layout_below="@+id/tvsettings"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/notation"
	    android:gravity="center_horizontal"
	    android:textColor="#000000"
    />
    <RadioGroup 
        android:id="@+id/rgnotation"
        android:layout_below="@+id/tvnotation"
        android:layout_width="fill_parent" 
 	    android:layout_height="wrap_content"
 	    android:gravity="center_horizontal"
 		android:orientation="vertical"
 	>
 		<RadioButton 
 	    	android:checked="true"
 			android:id="@+id/rbclassic" 
 			android:text="@string/classic"
 			android:textColor="#000000"
 		/>
 		<RadioButton 
 			android:checked="false"
 			android:id="@+id/rbletters" 
 			android:text="@string/letters"
 			android:textColor="#000000"
 		/>
 	</RadioGroup> 
 	
 	<TextView  
	    android:id="@+id/tvhofentries"
		android:layout_below="@+id/rgnotation"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/hofentries"
	    android:gravity="center_horizontal"
	    android:textColor="#000000"
    />
 	<CustomSpinner 
        android:id="@+id/sphofentries"
        android:layout_below="@+id/tvhofentries"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
    />
    <Button 
			android:id="@+id/endgame"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:height="40dp"
			android:text="@string/endgame"
			android:background="@drawable/custom_button"	
			android:layout_margin="3dp"
    />	
    	
    	
</RelativeLayout>